<Window x:Class="Talisman.NotificationWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Talisman"
        BorderBrush="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="Talisman" Height="132" Width="292.857" WindowStyle="None" ShowInTaskbar="False" 
        Topmost="True"
        Background="Transparent">
    <Grid  Background="Transparent">
        <Border x:Name="MyBorder" BorderThickness="5" BorderBrush="Red" CornerRadius="20"  Background="#a0FFFFFF">
            <Grid>
                <TextBlock Text="{Binding NotificationText}" TextWrapping="Wrap" Padding="8" Margin="0,0,0,39" FontSize="12" />
                <Label Content="Snooze" Margin="85,88,148,8" />
                <Button Content="5 min" Padding="0" Tag="5" Click="SnoozeClicked" Margin="135,91,106,10" />
                <Button Content="10 min" Padding="0" Tag="10" Click="SnoozeClicked" Margin="182,92,59,10" />
                <Button Content="20 min" Padding="0" Tag="20" Click="SnoozeClicked" Margin="229,92,12,10" />
                <Button Content="Dismiss" FontSize="12" Padding="0" Tag="20" Click="DismissClick" Margin="22,91,203,11" />
            </Grid>
        </Border>
    </Grid>
</Window>
