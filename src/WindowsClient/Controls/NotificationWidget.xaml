<Window x:Class="Talisman.NotificationWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Talisman"
        BorderBrush="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="Talisman" Height="132" Width="292.857" WindowStyle="None" ShowInTaskbar="False" 
        Topmost="True"
        Background="Transparent">
    <Grid  Background="Transparent">
        <Border x:Name="MyBorder" BorderThickness="5" BorderBrush="Red" CornerRadius="20"  Background="#a0FFFFFF">
            <Grid>
                <TextBlock Text="{Binding NotificationText}" TextWrapping="Wrap" MouseDown="HandleClick" Padding="20" Margin="0.2,0.2,78,4.4" />
                <Label Content="Snooze" Margin="223,10,10.2,85.6" />
                <Button Content="5 min" Padding="0" Tag="5" Click="SnoozeClicked" Margin="225,36,16.2,65.6" />
                <Button Content="10 min" Padding="0" Tag="10" Click="SnoozeClicked" Margin="225,61,16.2,40.6" />
                <Button Content="20 min" Padding="0" Tag="20" Click="SnoozeClicked" Margin="225,86,16.2,15.6" />
            </Grid>
        </Border>
    </Grid>
</Window>
