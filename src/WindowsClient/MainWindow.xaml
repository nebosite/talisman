<Window x:Class="Talisman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Talisman"
               mc:Ignorable="d"
        BorderBrush="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Title="MainWindow" Height="177.355" Width="156.457" WindowStyle="None" ShowInTaskbar="False" 
        Topmost="True"
        Background="Transparent">
    <Grid Margin="0,0,0.6,0.2" >
        <Image x:Name="Shadow"  Source="Assets/shadow.png" Margin="26,-7,13.2,-16.6"/>
        <Image x:Name="Glow"  Source="Assets/Glow.png" Width="150" Opacity="0"></Image>
        <Image x:Name="Stone"
            Source="Assets/MainObject.png" Width="80" VerticalAlignment="Center"
               MouseDown="HandleMouseDown"
               MouseMove="HandleMouseMove"
               MouseUp="HandleMouseUp"
               ></Image>
        <Label Content="{Binding TimeRemainingText}" Padding="0" HorizontalContentAlignment="Center" Margin="50,62,50.2,98.4"
               Foreground="#80000000"/>
    </Grid>
</Window>